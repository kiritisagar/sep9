version: 0.2 
phases:
  install:
    runtime-versions:
      java : corretto11
  pre_build:
    commands:
      - echo "pre-build started"
      - pwd
      - ls -lrta
      - echo "we are scanning the source code"
      - mvn verify sonar:sonar
      #- cd $CODEBUILD_SRC_DIR
      - pwd
      - ls -lrta
      - echo "scanning has been compleated and reports were published to sonar website"
  build:
    commands:
      - echo Build started on `date`
      - mvn clean validate compile test install verify package
      - ls -lrta
  post_build:
    commands:
      - echo Build completed on `date`
artifacts:
  files:
    #- target/staragile-1.0.0.war
    - '**/*'
